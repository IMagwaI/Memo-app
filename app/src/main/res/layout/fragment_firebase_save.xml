<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/myFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="357sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="0sp"
            app:srcCompat="@mipmap/mancloud" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5sp">

            <TextView
                android:id="@+id/nameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="37sp"
                android:layout_marginBottom="100sp"
                android:minWidth="220sp"
                android:textAlignment="viewEnd"
                android:textSize="18sp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/logOut"
                android:layout_height="34sp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@mipmap/logout"
                android:layout_width="0sp" />

        </LinearLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myFrame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Save now"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/saveFirebase"
        android:layout_width="81sp"
        android:layout_height="76sp"
        android:layout_below="@+id/save"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/floppy_disk"
        android:text="save now" />

</RelativeLayout>