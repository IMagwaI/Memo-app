<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/google" />


    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="384dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@mipmap/bg"
        android:orientation="vertical"
        android:padding="10pt">

        <TextView
            android:id="@+id/nameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10pt"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/saveInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10pt"
            android:text="save your data with your google account by clicking  on the button below ,you can upload your data later in the upload section "
            android:textColor="#120C0C"
            android:textSize="24sp" />

    </LinearLayout>



    <ImageButton
        android:id="@+id/saveFirebase"
        android:layout_width="71dp"
        android:layout_height="43dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/download"
        android:text="save now" />

</RelativeLayout>